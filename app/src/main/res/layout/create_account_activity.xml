<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgrou">

    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="@string/name_hint"
        android:inputType="textCapSentences"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/sing_up_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/sign_up_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="@string/email_input_text"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sing_up_email"
        android:layout_marginTop="15dp"
        android:hint="@string/password_input_text"
        android:inputType="textPassword"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/sign_up_pass_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sign_up_password"
        android:layout_marginTop="15dp"
        android:hint="@string/password_confirm_text"
        android:inputType="textPassword"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/sign_up_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sign_up_pass_confirm"
        android:layout_marginTop="15dp"
        android:hint="@string/age_hint"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_age"
        android:layout_marginTop="50dp"
        android:text="@string/accept_terms"
        android:id="@+id/i_accept"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/create_acc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_task_button_text"

        android:layout_below="@+id/i_accept"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        />


</RelativeLayout>